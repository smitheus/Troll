<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
	<Properties>
		<Property name="log-path">logs/test</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
		<RollingFile name="Test-log" fileName="${log-path}/Test-log" filePattern="${log-path}/test-%d{yyyy-MM-dd}.log">
			<PatternLayout	pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} [%t] %-5level %logger{36} - %msg%n" />
			<TimeBasedTriggeringPolicy interval="1"	modulate="true" />
		</RollingFile>
		<RollingFile name="Nbol-log" fileName="${log-path}/nbol.log" filePattern="${log-path}/nbol-%d{yyyy-MM-dd}.log">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} [%t] %-5level %logger{36} - %msg%n" />
			<TimeBasedTriggeringPolicy interval="1"	modulate="true" />
		</RollingFile>
		<RollingFile name="Payex-log" fileName="${log-path}/payex.log" filePattern="${log-path}/payex-%d{yyyy-MM-dd}.log">
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} [%t] %-5level %logger{36} - %msg%n" />
			<TimeBasedTriggeringPolicy interval="1"	modulate="true" />
		</RollingFile>
	</Appenders>
	<Loggers>
		<Logger name="NBOL" level="info">
			<AppenderRef ref="Nbol-log" />
		</Logger>
		<Logger name="PAYEX" level="info">
			<AppenderRef ref="Payex-log" />
		</Logger>
		<Root level="info">
			<AppenderRef ref="Console" />
			<AppenderRef ref="Test-log" />
		</Root>
	</Loggers>
</Configuration>